<Window x:Class="Wpf_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="myGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="Sample text" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3"/>
        <Label Content="Title of App" Grid.Column="1" Grid.Row="0" />
        <Button Grid.Column="3" Content="B" Grid.Row="3" FontSize="40" Click="Button_Click" >
            
        </Button>
        <Button Grid.Column="1" Content="A" Grid.Row="3" FontSize="40" FontWeight="Bold" FontFamily="Tempus Sans ITC" BorderBrush="#FF0A0606" Opacity="0.85" >
            <Button.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFEFEFEF" Offset="1"/>
                </LinearGradientBrush>
            </Button.OpacityMask>
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF09E5F5" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White"/>
                    <GradientStop Color="#FFC0D40B" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            
        </Button>
        <!--<Button Grid.Column="3" Content="B" Grid.Row="3" />-->


    </Grid>
</Window>
